<h2><%= @list.name %></h2>

<%= pluralize(@list.movies.size, 'movie') %>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <li class="list-group-item">
        <%= image_tag movie.poster_url,
        alt: movie.title,
        width: "400px" %></li>
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item"><%= bookmark.comment %>
                                  <%= link_to "Delete bookmark",
                                      bookmark_path(bookmark),
                                      method: :delete,
                                      data: { confirm: "Are you sure?"} %></li>
    <% end %>
    <!-- Force next columns to break to new line -->
      <hr>
      <div class="w-100"></div>
    <% end %>
</ul>

<%# Actions %>
<p><%= link_to "Add bookmark", new_list_bookmark_path(@list) %></p>
<p><%= link_to "Edit", edit_list_path %></p>
<p><%= link_to "Delete",
       list_path(@list),
       method: :delete,
       data: { confirm: "Are you sure?"} %></p>
<p><%= link_to "Back to lists", lists_path %></p>
